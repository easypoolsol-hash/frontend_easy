{
  "hosting": [
    {
      "target": "live",
      "public": "build/web",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ],
      "redirects": [
        {
          "source": "**",
          "destination": "https://school-portal-lilac.vercel.app/",
          "type": 302
        }
      ]
    },
    {
      "target": "develop",
      "public": "build/web",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "stage",
      "public": "build/web",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "api-live",
      "public": "public",
      "ignore": [
        "firebase.json",
        "**/.*"
      ],
      "rewrites": [
        {
          "source": "/**",
          "run": {
            "serviceId": "easypool-backend-production",
            "region": "asia-south1"
          }
        }
      ]
    },
    {
      "target": "api-develop",
      "public": "public",
      "ignore": [
        "firebase.json",
        "**/.*"
      ],
      "rewrites": [
        {
          "source": "/**",
          "run": {
            "serviceId": "easypool-backend-dev",
            "region": "asia-south1"
          }
        }
      ]
    },
    {
      "target": "api-stage",
      "public": "public",
      "ignore": [
        "firebase.json",
        "**/.*"
      ],
      "rewrites": [
        {
          "source": "/**",
          "run": {
            "serviceId": "easypool-backend-staging",
            "region": "asia-south1"
          }
        }
      ]
    }
  ]
}
